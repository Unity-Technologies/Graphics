
VFXBlockUI.VFXNodeUI.node {
    flex:1 0 auto;
    align-items:stretch;
    border-radius:0;
    border-color:rgba(0,0,0,0);
    padding-top: 2px;
    padding-left:0;
    padding-right:0;
    padding-bottom: 1px;
    margin-left:0;
    margin-right:0;
    overflow:hidden;
}
VFXBlockUI.VFXNodeUI.node.first
{
    padding-top:0;
}
VFXBlockUI.VFXNodeUI.node.first > #selection-border
{
    margin-top:0;
}

VFXBlockUI.VFXNodeUI.node > #selection-border
{
    margin-left:0;
    margin-right:0;
    margin-top: 2px;
    margin-bottom: 1px;
}

VFXBlockUI.VFXNodeUI.node #contents > #top > #input
{
    padding-bottom: 8px;
    flex: 1 1 auto;
}

VFXContextUI VFXBlockUI.node #node-border #title
{
    flex-direction:row;
    align-items:center;
    justify-content:flex-start;
}

VFXBlockUI.VFXNodeUI.node #node-border
{
    border-radius:8px;
}

VFXBlockUI.VFXNodeUI.node.invalid #node-border
{
    border-color: #FF0000;
}

VFXContextUI VFXBlockUI.node #node-border #title #title-label
{
    margin-left: 4px;
    flex: 1 0 auto;
}

VFXContextUI VFXBlockUI.node.block-disabled #node-border .port #label
{
    opacity: 0.5;
}

VFXContextUI VFXBlockUI.node.block-disabled #node-border #settings #label
{
    opacity: 0.5;
}

VFXContextUI VFXBlockUI.node.block-disabled #node-border #title #title-label
{
    opacity: 0.5;
}

VFXContextUI VFXBlockUI.node.block-disabled #node-border #title, VFXContextUI VFXBlockUI.node.block-disabled #node-border #contents
{
    background-color: rgba(41,41,41,0.8);
}

VFXBlockUI.node #title #collapse-button
{
    width: 20px;
    padding-right: 4px;
}
VFXBlockUI.node
{
    margin-left:0;
    margin-right:0;
    margin-top:0;
    margin-bottom:0;
    flex-direction:row;
}

VFXBlockUI.node > #node-border
{
    flex:1 1 auto;
    margin-left:0;
    margin-right:0;
    margin-top:0;
    margin-bottom:0;
}
