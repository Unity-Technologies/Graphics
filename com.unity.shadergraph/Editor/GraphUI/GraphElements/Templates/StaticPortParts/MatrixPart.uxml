<ui:UXML xmlns:ui="UnityEngine.UIElements">
    <ui:VisualElement class="unity-base-field">
        <!--
            Uncomment to add a left-hand label
        <ui:Label text="Label" name="sg-matrix-label" class="unity-base-field__label"/>
        -->
        <ui:VisualElement name="sg-matrix-container" class="sg-matrix-container unity-base-field__input">
