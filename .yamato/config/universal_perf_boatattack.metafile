project:
  name: URP_Performance_BoatAttack
  folder: BoatAttack
test_platforms:
  - type: Standalone
    name: performance_playmode_runtime
    is_performance: True
    extra_utr_flags:
      - --report-performance-data
      - --performance-project-id=BoatAttack
    extra_utr_flags_build:
      - --extra-editor-arg="-executemethod Editor.Setup"
      - --extra-editor-arg="-testCategory Performance"
      - --extra-editor-arg="-addscenetobuild=Assets/scenes/Testing/benchmark_island-static.unity"
      - --extra-editor-arg="-stripenginecode-" 
      - --extra-editor-arg="-managedstrippinglevel=Low"
      - --extra-editor-arg="-allowdebugging-" 
  - type: editmode
    name: performance_editmode_build
    is_performance: True
    extra_utr_flags:
      - --report-performance-data
      - --performance-project-id=BoatAttack
      - --testfilter=Build
platforms:
  - name: Win
    extra_utr_flags:
      - --extra-editor-arg="-playergraphicsapi=Direct3D11"
    apis:
      - name: DX11
        cmd: -force-d3d11
      - name: Vulkan
        cmd: -force-vulkan
  - name: OSX
    apis:
      - name: Metal
        exclude_test_platforms:
          - playmode_XR
      - name: OpenGLCore
        exclude_test_platforms:
          - playmode_XR
          - Standalone
  - name: Android
    apis: 
      - name: Vulkan
      - name: OpenGLES3
  - name: iPhone
    apis: 
      - name: Metal
        exclude_test_platforms:
          - playmode_XR
build_configs:
- name: il2cpp_2
  scripting_backend: il2cpp
  api_level: NET_2_0
- name: il2cpp_4
  scripting_backend: il2cpp
  api_level: NET_4_6
- name: mono_2
  scripting_backend: mono
  api_level: NET_2_0
- name: mono_4
  scripting_backend: mono
  api_level: NET_4_6
color_spaces:
  - Linear
  - gamma
all:
  dependencies:
    - platform: Win
      api: DX11
      build_config: il2cpp_4
      color_space: Linear
      test_platforms:
        - performance_playmode_runtime
        - performance_editmode_build
    - platform: OSX
      api: Metal
      build_config: il2cpp_4
      color_space: Linear
      test_platforms:
        - performance_playmode_runtime
        - performance_editmode_build
    - platform: Android
      api: OpenGLES3
      build_config: il2cpp_4
      color_space: Linear
      test_platforms:
        - performance_playmode_runtime
        - performance_editmode_build
    - platform: iPhone
      api: Metal
      build_config: il2cpp_4
      color_space: Linear
      test_platforms:
        - performance_playmode_runtime
        - performance_editmode_build
