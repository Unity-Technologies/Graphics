project:
  name: Smoke_Test
  folder: SRP_SmokeTest
test_platforms:
  - type: playmode
  - type: editmode
  - type: Standalone
platforms:
  - name: Win
    apis:
      - name: DX11
    build_configs:
      - name: mono
    color_spaces:
      - Linear
expression_trigger:
  expression: 'pull_request.target eq "<TARGET_BRANCH>" AND NOT pull_request.draft AND pull_request.changes.any match ["TestProjects/SRP_SmokeTest/**/*"] AND NOT pull_request.changes.all match ["*.md", "**/*.md", "doc/**/*", "**/Documentation*/**/*"]'
pr:
  dependencies:
    - platform: Win
      api: DX11
      build_config: mono
      color_space: Linear
      test_platforms:
        - playmode
        - editmode
        - Standalone
nightly:
  dependencies:
    - project: Smoke_Test
      pr: true
