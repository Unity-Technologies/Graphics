.ge-resizable-element {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    flex-direction: row;
    align-items: stretch;
}

.ge-resizable-element > #right,.ge-resizable-element > #left  {
    width: 8px;
    flex-direction: column;
    align-items: stretch;
}

.ge-resizable-element > #middle {
    flex:1 0 auto;
    flex-direction: column;
    align-items: stretch;
}


.ge-resizable-element > #left > #top-left-resize {
    height: 8px;
    cursor: resize-up-left;
}

.ge-resizable-element > #left > #left-resize {
    flex:1 0 auto;
    cursor: resize-horizontal;
}

.ge-resizable-element > #left > #bottom-left-resize {
    height: 8px;
    cursor: resize-up-right;
}

.ge-resizable-element > #middle > #top-resize {
    height: 8px;
    cursor: resize-vertical;
}

.ge-resizable-element > #middle > #middle-center {
    flex:1 0 auto;
}

.ge-resizable-element > #middle > #bottom-resize {
    height: 8px;
    cursor: resize-vertical;
}

.ge-resizable-element > #right > #top-right-resize {
    height: 8px;
    cursor: resize-up-right;
}

.ge-resizable-element > #right > #right-resize {
    flex:1 0 auto;
    cursor: resize-horizontal;
}

.ge-resizable-element > #right > #bottom-right-resize {
    height: 8px;
    cursor: resize-up-left;
}
