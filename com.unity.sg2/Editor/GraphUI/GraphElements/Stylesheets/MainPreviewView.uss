#unity-overlay
{
    align-items: stretch;
    align-content: stretch;
    display: flex;

    position-type: absolute;
    position-left: 0;
    position-top: 0;
    position-right: 0;
    position-bottom: 0;

    min-width: 130;
    min-height: 130;

    width: 130;
    height: 130;
}

.MainPreviewView
{
    min-width: 100px;
    min-height: 100px;

    border-radius: 6px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-color: rgb(25,25,25);
    align-self: center;
    align-content: stretch;
    align-items: stretch;
    flex-grow: 1;
}

#previewImage {
    padding: 3;
    align-self: stretch;
    flex-grow: 1;
}
